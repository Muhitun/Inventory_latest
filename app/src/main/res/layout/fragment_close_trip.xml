<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.royex.inventoryapps.CloseTrip">

   <LinearLayout
       android:layout_width="match_parent"
       android:paddingTop="15dp"
       android:id="@+id/layoutfinal"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Inventory status:"
           android:textSize="17dp"
           android:textColor="#3498DB"/>



        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/Divider"
            >

            </View>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:orientation="horizontal">

              <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">
                <View style="@style/Divider" />

              </LinearLayout>

              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:textAlignment="center"
                  android:layout_height="match_parent"
                  android:text="Products: 50"
                  android:textSize="17dp"/>

              <LinearLayout
                  android:layout_width="1dp"
                  android:layout_height="match_parent">
                  <View style="@style/Divider" />

              </LinearLayout>


              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:textAlignment="center"
                  android:layout_height="match_parent"
                  android:text="In Stock: 100"
                  android:textSize="17dp"/>

              <LinearLayout
                  android:layout_width="1dp"
                  android:layout_height="match_parent">
                  <View style="@style/Divider" />

              </LinearLayout>


              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:textAlignment="center"
                  android:layout_height="match_parent"
                  android:text="Sale value: 30"
                  android:textSize="17dp"/>

              <LinearLayout
                  android:layout_width="1dp"
                  android:layout_height="match_parent">
                  <View style="@style/Divider" />

              </LinearLayout>



          </LinearLayout>



        </RelativeLayout>

       <View


           android:layout_width="match_parent"
           android:layout_height="1dp"
           style="@style/Divider"
           >

       </View>



       <LinearLayout
           android:paddingTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <View


               android:layout_width="match_parent"
               android:layout_height="1dp"
               style="@style/Divider"
               >

           </View>

       </LinearLayout>


       <TextView
           android:paddingTop="15dp"
           android:id="@+id/invoiceText"
           android:textSize="17dp"
           android:textColor="#3498DB"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Invoice:"/>

       <TextView
           android:paddingTop="10dp"
           android:textSize="17dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Number of invoice - 50"/>

       <LinearLayout
           android:paddingTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <View


               android:layout_width="match_parent"
               android:layout_height="1dp"
               style="@style/Divider"
               >

           </View>

       </LinearLayout>

       <TextView
           android:paddingTop="10dp"
           android:textSize="17dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Cash - 5000"/>

       <LinearLayout
           android:paddingTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <View


               android:layout_width="match_parent"
               android:layout_height="1dp"
               style="@style/Divider"
               >

           </View>

       </LinearLayout>

       <TextView
           android:paddingTop="10dp"
           android:textSize="17dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Bank - 2000"/>


       <RelativeLayout
           android:paddingTop="80dp"
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <Button
               android:layout_width="140dp"
               android:layout_height="60dp"
               android:text="Close trip"
               android:id="@+id/clostButton"
               android:background="#ff0000"
               android:textColor="#ffffff"/>
       </RelativeLayout>



   </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom = "true"
        android:scaleType="fitEnd"
        android:gravity="bottom|center_horizontal"
        android:src="@drawable/footer"></ImageView>





</FrameLayout>
